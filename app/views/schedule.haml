      .edit-jumper{:style => "text-align: center", :id => 'edit'}
        %form.newjumperform{:style => " text-align: right; font-size: 16px"}
          %p
            %label.existing-label Existing Jumper
            %select.existing-jumper{:style => "width: 177px; margin-left: 20px", :name => "id"}
              %option{:value => ""}
              -Jumper.all.each do |jumper|
                %option{:value => jumper.id}= jumper.name
            :javascript
              $(document).ready(function(){
                $('.existing-jumper').change(function(){
                  if ($(this).val() != ""){
                    $(".existing-label").addClass("bold");
                    if ($("fieldset.new-jumper").is(":visible")) $("fieldset.new-jumper").hide("blind", 250);
                  } else {
                    $(".existing-label").removeClass("bold");
                    $("fieldset.new-jumper").show("blind", 250);
                  }
                });
              });
          %input{:type => "hidden", :name => "id"}
          %fieldset.new-jumper{:style => "margin: 10px -5px;"}
