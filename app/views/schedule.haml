.box.box-40.altbox
  .boxin
    .header
      %h3 Reservations Made Today
    .content
      %table{:cellspacing => "0"}
        %thead
          %tr
            %th Group Name
            %td.tc Date
            %td.tc # Jumpers
            %td.tc View/Edit
        %tbody
          -10.times do |i|
            %tr{:class => ( i == 0 ? "first" : "")}
              %th
                %a{:href => "#"} Kent McCullough
              %td.tc July #{11 - i/3}th
              %td.tr
                %a.stat.green{:href => "#", :style => "margin-right: 20px"}= i*16
              %td.tc
                %a.awesome.yellow.medium{:style => 'padding: 2px 5px', :href => "/ajax/edit-schedule?id=HELLO!", :rel => 'jumpersfacebox'}
                  %img{:src => "/css/img/led-ico/pencil.png", :width => "16", :height => "16", :style => 'vertical-align: text-top'}
