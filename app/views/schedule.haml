.box.box-60
  .boxin{:style => "border: #AAA"}
    .content
      %table.calendar{:cellspacing => "0"}
        %thead
          %tr
            %th.tc.month{:colspan => "7"}
              .spacer{:style => "display: inline; margin-left: 157px"}
              %a{:href => "#", :title => "Go to June 2011"}
                %img{:alt => "Go to October 2009", :src => "css/img/cal-left.png", :style => "height: 18px; width: 18px"}
              = Time.now.strftime("%B %Y")
              %a{:href => "#", :title => "Go to August 2011"}
                %img{:alt => "Go to January 2010", :src => "css/img/cal-right.png", :style => "height: 18px; width: 18px"}
              .legend{:style => "display: inline; margin-left: 7px; font-size: 12px"}
                .stat.outline Sport
                .stat.green.flat-right.flat-right Tandem 
                .stat.purple.merge-left AFF
          %tr
            %th.tc Monday
            %th.tc Tuesday
            %th.tc Wednesday
            %th.tc Thursday
            %th.tc Friday
            %th.tc Saturday
            %th.tc Sunday
        %tbody
          - days = []
          -5.times do |week|
            %tr
              -7.times do |day|
                -day_number = (27 + week*7 + day) % 30 + 1
                -non_modulo = (28 + week*7 + day)
                %td{:class => ((non_modulo > 30 && non_modulo < 61) ? "" : "inactive" )}
                  %strong= day_number
                  -unless (non_modulo > Time.now.day + 30) || (day == 0) #not future or monday
                    .items
                      .stat.outline= rand(10) +2
                      %br
                      .stat.green.flat-right= rand(3) + 5
                      .stat.purple.merge-left= rand(6)+10
