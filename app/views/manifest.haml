#manifest.pagediv{:style => (@current_page == "manifest" ? "" : "display: none")}
  .box.box-60.altbox
    / .altbox for alternative box's color
    .boxin
      .header
        %h3 Today's Manifests
        %a.button{:href => "#"} New &nbsp;Â»
        / Action button in the header of the box
        %ul
          / Tabs in the box's header
          %li
            %a.active{:href => "#"} Upcoming
          / .active for active tab
          %li
            %a{:href => "#"} All
      .content
        %table{:cellspacing => "0"}
          %thead
            %tr
              %th Article
              %td.tc Comments
              %td.tc Jump Date
              %td
          %tbody
