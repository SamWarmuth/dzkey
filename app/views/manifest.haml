              %tr{:class => ( i == 0 ? "first" : "")}
                %th
                  %a{:href => "#"} Cessna Load
                %td.tc
                  %a.ico-comms{:href => "#"}= i*16
                %td 7/24/2011
                %td
                  %a{:href => "#"} edit
