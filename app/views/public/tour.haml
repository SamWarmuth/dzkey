:javascript
  function sticky_relocate() {
    var window_top = jQuery(window).scrollTop();
    var div_top = jQuery('#sticky-anchor').offset().top;
    if (window_top > div_top){
      jQuery('#sticky').addClass('stick');
      jQuery('#sticky-replacement').show();
    } else{
      jQuery('#sticky').removeClass('stick');
      jQuery('#sticky-replacement').hide();
      
    }
  }
  jQuery(document).ready(function(){
    jQuery('body').nivoZoom();
    jQuery("a.scroller").click(function(){
      var elementClicked = jQuery(this).attr("href");
      jQuery(".sel-li").hide();
      jQuery(".desel-li").show();
      jQuery(elementClicked+"s").show();
      jQuery(elementClicked+"d").hide();
      
      var destination = jQuery(elementClicked).offset().top;
      jQuery("html,body").animate({ scrollTop: destination-65}, 1000);
      return false;
    });
    jQuery(window).scroll(sticky_relocate);
    sticky_relocate();
  });
  
    