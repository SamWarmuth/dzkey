!!! Strict
%html{:xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}
    %title DZKey — Manage Your Dropzone.
    %meta{:content => "DZKey", :name => "author"}
    %meta{:content => "Dropzone Management Software", :name => "description"}
    %meta{:content => "Dropzone Manifest Finance Schedule Aircraft", :name => "keywords"}
    %meta{:content => "english", :name => "language"}
    %link{:href => "images/favicon.ico", :rel => "icon", :type => "image/ico"}
    %link{:href => "css/global.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "css/color_blue.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "css/nivo.css", :rel => "stylesheet", :type => "text/css"}
    %link{:href => "css/lightbox.css", :rel => "stylesheet", :type => "text/css"}/
    
    %script{:src => "js/jquery-1.4.2.min.js", :type => "text/javascript"}
    %script{:src => "js/jquery.nivo.slider.pack.js", :type => "text/javascript"}
    %script{:src => "js/jquery.nivo.zoom.pack.js", :type => "text/javascript"}
    
    /[if IE 6] <link type="text/css" rel="stylesheet" href="css/ie6.css" />
    
    :javascript
      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-7002972-4']);
      _gaq.push(['_trackPageview']);

      (function() {
        var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
        ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
        var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();
  %body
    .header#the-top
      .header_content
        %a{:href => "/"}
          %img.logo.png{:alt => "DZKey Logo", :height => "45", :width => "147", :style => "position: relative; top: -5px;", :src => "images/dzkey-glow.png", :title => "Go to Homepage"}
        %ul.main_menu
          - [["", ""], ["tour", "Feature Tour"], ["faq", "FAQ"], ["about", "About Us"], ["contact", "Contact"]].each do |url, name|
            -if name == @current_page
              %li.selected_page
                .selected
                  .selected_left
                  .selected_middle
                    %a{:href => "/"+url, :class => (name.empty? ? "homepage" : "")}= name
                  .selected_right
            -else
              %li
                %a{:href => "/"+url, :class => (name.empty? ? "homepage" : "")}= name
          %li
            %a.awesome.medium.green{:href => "/pricing", :style => "color: white; margin-top: -8px;"} Pricing / Sign Up
    = yield
    .footer
      .footer_content
        .footer_left
          %p © 2010 DZKey&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;all rights reserved
        .footer_right
          %p
            %a{:href => "#"}> Privacy Statement
            \&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
            %a{:href => "#"} Terms &amp; Conditions