.edit-jumper{:style => "width: 600px; text-align: center", :id => 'edit'+@jumper.id}
  %b{:style => 'font-size: 24px; text-align: center;background: #eee; display: block; margin: -10px -10px 0px -10px; padding: 5px'} Edit Jumper
  %form.newjumperform{:style => "margin-right: 150px; text-align: right; font-size: 16px"}
    %input{:type => "hidden", :name => "id", :value => @jumper.id}
    %p.bold
      %label Name
      %input{:type => "text", :size => "12", :name => "first_name", :style => "margin-left: 20px", :value => @jumper.first_name}
      %input{:type => "text", :size => "12", :name => "last_name", :style => "margin-left: 0px", :value => @jumper.last_name}
    %p
      %label Nickname
      %input{:type => "text", :size => "30", :name => "nickname", :style => "margin-left: 20px", :value => @jumper.nickname}
    %p
      %label ZIP Code
      %input{:type => "text", :size => "30", :name => "zip", :style => "margin-left: 20px", :value => @jumper.zip}
    %p
      %label Country
      %input{:type => "text", :size => "30", :name => "country", :style => "margin-left: 20px", :value => @jumper.country}
    %br
    %p.bold
      %label Balance
      %input{:type => "text", :disabled => true, :size => "30", :style => "margin-left: 20px", :name => "balance", :value => @jumper.balance}
    %br
    %div
      .checkcontainer{:onClick => "toggleAvailable();", :style => 'margin-right: 65px; position: relative'}
        .cover{:style => "display: block; position: absolute; margin: 0; width: 110px; height: 30px; opacity: 0;"}
        %input.available{:type => "checkbox", :style => "margin-right: 10px;", :name => "available", :checked => (@jumper.available ? "checked" : nil)}
        %label{:style => "font-weight: bold;"} Checked In
    %br
    .left{:style => "display: inline; margin-right: 12px"}        
      %a.awesome.giant.green{:href => "#create-jumper", :onClick => "createJumper(this);"} Save Jumper
    .left{:style => "display: inline;margin-right: -13px"}
      %a.awesome.medium.gray{:href => "#", :onClick => "$.facebox.close()"} Cancel